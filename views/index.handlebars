
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Order Here</h2>
            <form class="create-form">
            
              <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="name">
                <button type="submit">Add Burger</button>
              </div>
              
            </form>
            <ul>
              {{#each burgers}}
                {{#unless eaten}}
                  {{> burgers/burger-block eaten=true}}
                {{/unless}}
              {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ul>
              {{#each burgers}}
                {{#if eaten}}
                  {{> burgers/burger-block eaten=false}}
                {{/if}}
              {{/each}}
            </ul>
        </div>
    </div>
</div>
